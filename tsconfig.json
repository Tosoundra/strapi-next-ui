{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@shared/*": ["src/shared/*"],
			"@pages/*": ["src/pages/*"],
			"@entities/*": ["src/entities/*"],
			"@features/*": ["src/features/*"]
		},
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"src",
		"src/index.tsx",
		"react-app-env.d.ts",
		".next/types/**/*.ts",
		"src/shared/shared/lib/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
